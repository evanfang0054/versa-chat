{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "DEPLOY_ENV", "API_BASE_URL"],
  "globalDependencies": ["**/.env.*local", ".env", "tsconfig.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**",
        "packages/*/dist/**"
      ],
      "env": ["DEPLOY_ENV", "API_BASE_URL"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": [],
      "cache": false
    }
  }
}
