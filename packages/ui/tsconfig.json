{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // 启用 vite 的类型
    "types": ["vite/client"],
    "baseUrl": "./src",
    "jsx": "react-jsx",
    // 启用复合项目
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false
  },
  "include": ["src"],
  "references": [{ "path": "../utils" }]
}
